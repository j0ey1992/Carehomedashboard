{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src"
  },
  "compileOnSave": true,
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "src/backup"
  ]
}
